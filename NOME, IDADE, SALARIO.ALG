algoritmo "nome, idade, salario"
var
  nome: caractere
  idade: inteiro
  salario: real
inicio
   escreva("Qual o seu nome: ")
   leia (nome)
   escreval("Qual a  sua idade: ")
   leia (idade)
   escreval ("Qual é o seu salário: ")
   leia (salario)
   escreval ("Olá ",nome, ". Sua idade é de ",idade ," e seu salário é de R$",salario,".")
  
fimalgoritmo